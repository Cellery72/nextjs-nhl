generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = ""
}

model Team {
  TeamId           String   @id @default(uuid()) @map("TeamId")
  Abbreviation String   @unique @map("Abbreviation")
  FullName     String   @map("FullName")
  Players      Player[]
  CreatedAt    DateTime @default(now())
  UpdatedAt    DateTime? @updatedAt
}

model Player {
  PlayerId             String    @id @default(uuid()) @map("PlayerId")
  Number         String    @map("Number")
  Name           String    @map("Name")
  Position       String    @map("Position")
  Age            Int       @map("Age")
  Height         String    @map("Height")
  Weight         Int       @map("Weight")
  ShootsCatches  String    @map("ShootsCatches")
  YearsExperience Int?     @map("YearsExperience")
  DateOfBirth    DateTime  @map("DateOfBirth")
  Summary        String?   @map("Summary")
  Salary         Float?    @map("Salary")
  Team           Team      @relation(fields: [TeamId], references: [TeamId])
  TeamId         String    @map("TeamId")
  CreatedAt      DateTime  @default(now())
  UpdatedAt      DateTime?  @updatedAt

  @@index([TeamId])
}

